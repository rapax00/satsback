{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "lib": ["es2015"]
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "dist"]
}
